<figure>
  <code id="cover-image" style="display: none;"></code>
  <img class="cover-img" data-embed-id="cover-image" alt="Mastercard cover image" src="https://images.unsplash.com/photo-1533562179840-9cce77549aa6?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=1600&h=400&fit=crop&ixid=eyJhcHBfaWQiOjF9&s=461c16b2ba620b62655c9c0ad08ddd78">
</figure>

<div class="container">

  <div class="col-md-12 ralative">
    <div class="see-throuh-box">
      <div class="col-md-4"></div>
      <div class="col-md-8 ">
        <h1 class="stick-to-bottom"> <%= @developer.first_name %> <%= @developer.last_name %></h1>
      </div>
    </div>
    <div class="show-header white-box">
      <div class="col-md-4"></div>
      <div class="col-md-6">
        <h4 class="stick-to-top"><%= @developer.email %></h4>
      </div>
      <div class="col-md-2 edit-icon">
        <%= link_to edit_developer_path(current_developer) do %>
        <i class="fa fa-edit"></i>
        <% end %>
      </div>
      <div class="col-md-4"></div>
      <div class="col-md-8 dev-description">
        <h4 class="stick-to-top"> <%= @developer.description %></h4>
      </div>
      <% if @developer.avatar? %>
        <div class = "user-avatar absolute" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
            url('<%= cl_image_path @developer.avatar %>')"></div>
      <% else %>
        <%= image_tag "https://image.flaticon.com/icons/svg/145/145849.svg", class: "user-avatar absolute"%>
      <% end %>
    </div>
  </div>

  <div class="col-md-12">
    <div class="project-info white-box">
      <h3 >MY PROJECTS</h3>
      <div class = "row">
      <% @projects.each do |project| %>
        <div class="col-md-4  text-center projects-box">
          <h3><%= project.name  %> </h3>
          <p>Status: <%= project.status %></p>
          <p>Deadline: <%= project.deadline  %></p>
          <%= link_to "", project_path(project), class: 'box-link'  %>
        </div>
      <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <div class="skills white-box">
      <h3> MY SKILLS </h3>
      <div class="form-group">
        <div class="skill-display">
          <% @skills.each do |skill| %>
            <div class = "text-center">
              <div class="skill-choice"><%= skill.name %></div>
              <%= link_to "Remove", developer_developer_skill_path(@developer, skill) , method: :delete %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>



  <div class="col-md-12">
    <div class="skills white-box">
      <h3>MY APPLICATIONS</h3>
      <% @proposals.each do |proposal| %>
        <div>
          <%= link_to proposal.project.name, project_path(proposal.project)  %>
          <%= proposal.state  %>
        </div>
      <% end %>
    </div>
  </div>
  </div>
</div>
