<figure>
  <code id="cover-image" style="display: none;"></code>
  <img class="cover-img" data-embed-id="cover-image" alt="Mastercard cover image" src="https://images.unsplash.com/photo-1533562179840-9cce77549aa6?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=1600&h=400&fit=crop&ixid=eyJhcHBfaWQiOjF9&s=461c16b2ba620b62655c9c0ad08ddd78">
</figure>

<div class="container">

  <div class="col-md-12">
    <div class="comments green-box">
      <h2> Hi, <%= @developer.first_name %> <%= @developer.last_name %></h2>
    </div>
    <div class="project-info white-box">
      <%# @id = current_developer.id %>
      <!-- Change to current_developer -->
      <!-- Change to current_developer -->
      <h4>Email: <%= @developer.email %></h4>
      <h4>Description: <%= @developer.description %></h4>
      <h4>Experience: <%= @developer.experience %></h4>
      <h4>Linkedin_username: <%= @developer.linkedin_username %></h4>
      <h4>Github_username: <%= @developer.github_username %></h4>
      <h4>Photo: <%= @developer.avatar %></h4>
      <h4>First Name: <%= @developer.first_name %></h4>
      <h4>Last Name: <%= @developer.last_name %></h4>
    </div>
  </div>

  <div class="col-md-12">
    <div class="comments green-box">
      <h2>Your Projects: </h2>
    </div>
    <div class="project-info white-box">
      <div class = "row">
      <% @projects.each do |project| %>
        <div class="col-md-4  text-center">
          <p>Name: <%= project.name  %> </p>
          <p>Status: <%= project.status %></p>
          <p>Deadline: <%= project.deadline  %></p>
          <p>ID: <%= project.id  %></p>
        </div>
      <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <div class="comments green-box">
      <h2> My Skills </h2>
    </div>
    <div class="skills white-box">
      <div class="stat-content">
        <% @skills.each do |skill| %>
          <li><%= skill.name %> <%= link_to "Remove", developer_developer_skill_path(@developer, skill) , method: :delete%></li>
        <% end %>
      </div>
    </div>
  </div>



  <div class="col-md-12">
    <div class="comments green-box">
      <h2>Your Applications</h2>
    </div>
    <div class="skills white-box">
      <% @proposals.each do |proposal| %>
        <div>
        <%= proposal.project.name  %>
        ---->
        <%= proposal.state  %>
        </div>
      <% end %>
    </div>

  </div>
</div>
