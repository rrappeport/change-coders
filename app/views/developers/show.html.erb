<figure>
  <code id="cover-image" style="display: none;"></code>
  <img class="cover-img" data-embed-id="cover-image" alt="Mastercard cover image" src="https://res.cloudinary.com/deoafyurg/image/upload/v1534410963/filip-varga-271263-unsplash.jpg">
</figure>

<div class="container">

  <div class="col-md-12">
    <div class="project-info white-box">
      <div class="col-md-4">
      </div>
        <div class="col-md-8">
        </div>
      <div class = "row padding-medium-top" >
        <div class="col-md-4 user-photo">
          <% if @developer.avatar? %>
            <div class = "user-avatar"
            style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)),
           url('<%= cl_image_path @developer.avatar %>')"></div>
          <% else %>
            <%= image_tag "https://image.flaticon.com/icons/svg/145/145849.svg", class: "user-avatar"%>
          <% end %>
          <div class = "star-rating">
            <div class="fa fa-star on"></i><i class="fa fa-star on"></i><i class="fa fa-star on"></i><i class="fa fa-star on"></i><i class="fa fa-star off"></i></div>
          </div>
        <div class="contact-links contact-links-show ">
          <a href="#"><i class="far fa-envelope"></i> </a>
          <a href="#"><i class="fab fa-twitter"></i></a>
          <a href="#"><i class="fab fa-linkedin-in"></i></a>
          <a href="#"><i class="fab fa-github"></i></a>
        </div>
        </div>
        <div class="col-md-8">
          <div>
            <h3 class="margin-remove-top"> <%= @developer.first_name %> <%= @developer.last_name %></h3>
            <h4 class= "project-h4" > <strong> Bio </strong></h4>
            <h4 class= "project-h4"><%= @developer.description %></h4>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <div class="project-info white-box">
      <div>
        <h3> <%= @developer.first_name %>'s Experience </h3>
        <h4 class= "project-h4 show-content"><%= @developer.experience %></h4>
      </div>
    </div>
  </div>


  <div class="col-md-12">
    <div class="project-info white-box">
      <h3> <%= @developer.first_name %>'s projects </h3>
      <div class="row">
        <div class="form-group">
          <% @projects.each do |project| %>
            <div class="col-md-3  text-center projects-box">
              <h3><%= project.name  %> </h3>
              <p>Status: <%= project.status %></p>
              <p>Deadline: <%= project.deadline  %></p>
              <%= link_to "", project_path(project), class: 'box-link'  %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <div class="project-info white-box dev-skills-show">
      <h3>  <%= @developer.first_name %>'s skills </h3>
      <div class="skill-display">
        <% @developer.skills.each do |skill| %>
          <div class = "text-center">
            <div class="skill-choice">
              <i class="devicon-<%= skill.name %>-plain colored"></i>
              <%= skill.name %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


