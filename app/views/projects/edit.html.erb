<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form-post text-center">
        <%= image_tag "logo.png", height: 70 %>
        <h2>Edit the project</h2>
        <%= simple_form_for @project do |f| %>
          <h1><%= f.input :name %></h1>
          <h1><%= f.input :details %></h1>
          <h1><%= f.input :status %></h1>
          <h1><%= f.input :work_type %></h1>
          <h1><%= f.input :deadline, as: :string, required: false, input_html: {class: "datepicker"} %></h1>

            <div class="form-group">
              <label class="control-label check_boxes optional">
                  <h1>Skills</h1>
              </label>
              <input type="hidden" name="project[skill_ids][]" value="">
              <fieldset class="skill-choices">
                <% Skill.all.each do |skill| %>
                  <div class="skill-choice">
                    <input type="checkbox" class="checkbox-hidden" value="<%= skill.id%>" name="project[skill_ids][]" id="project_skill_ids_<%= skill.id%>" >
                    <label class="" for="project_skill_ids<%= skill.id%>">
                      <%= skill.name %>
                      <i class="fa fa-check"></i>
                    </label>
                  </div>
                <% end %>
              </fieldset>
            </div>

          <h1><%= f.button :submit, class: 'btn btn-success' %></h1>
          <%= link_to "Back", :back, class: "btn btn-reset" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


